<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTempoAgora2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0" Spacing="25">

            <Entry x:Name="txt_cidade" Placeholder="Digite o nome da cidade" />
            <Button Text="Buscar" Clicked="Button_Clicked" />
            <Button Text="Ativar Modo Offline" Clicked="ToggleOfflineMode" />

            <Label x:Name="lbl_res" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
